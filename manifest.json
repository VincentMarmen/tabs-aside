{
  "manifest_version": 2,
  "name": "Tabs Aside! (legacy)",
  "version": "1.17.2",
  "description": "Set your tabs aside and store them in your bookmarks.",
  "author": "Tim Weissenfels",

  "icons": {
    "48": "icons/arrow-left-48.png"
  },

  "permissions": [
    "bookmarks",
    "tabs",
    "storage",
    "menus"
  ],

  "browser_action": {
    "default_icon": "icons/aside2.png",
    "default_title": "Tabs aside!",
    "default_popup": "popup/menu.html",
    "browser_style": true
  },

  "sidebar_action": {
    "default_title": "Tabs you've set aside",
    "default_panel": "sidebar/sidebar.html",
    "default_icon": "icons/tabs.png"
  },

  "background": {
    "scripts": [
      "util/tabUtils.js",
      "util/isBMFolder.js",
      "util/wait.js",
      "func.js",
      "tab-menu.js",
      "background.js"
    ]
  },

  "options_ui": {
    "page": "options/options.html",
    "browser_style": true
  },

  "commands": {
    "tabs-aside": {
      "suggested_key": {
        "default": "Alt+A"
      },
      "description": "Set the current set of tabs aside"
    }
  }

}